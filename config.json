{
    // Порт, на котором запущен сервер
    "port": 8080,

    // Режим отладки.
    // В этом режиме показываются посылаемые серверу URL-запросы, а также
    // соединения, устанавливаемые Socket.IO.
    "debug": false,

    // Имя игрока по умолчанию
    "defaultName": "Anon",

    // Время существования новой комнаты (в секундах)
    "newRoomTimeout": 3600,

    // Время существования неактивной комнаты (в секундах).
    // Комната считается неактивной, если в ней не происходят события.
    "inactiveRoomTimeout": 300,

    // Установки игры по умолчанию
    "defaultOptions": {
        "maxPlayers": 24,           // Максимальное число игроков
        "mafiaCoeff": 2,            // Коэффициент мафии (каждый n-ный — мафиози)
        "dayTimeout": 5,           // Таймаут фазы дня
        "nightTimeout": 5,         // Таймаут фазы ночи
        "voteTimeout": 20           // Таймаут голосования
    }
}